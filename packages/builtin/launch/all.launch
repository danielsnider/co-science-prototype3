
nodes:

- name: image loader
  file: reader.py
  package: builtin
  outputs: 
    - to: image
      fields:
        - original
        - filename
        - row
        - column
        - field
        - plate
  params: 
    - input files: '/home/dan/imglib2-tutorials/images/*.tiff'

- name: filters
  file: filter.py
  package: my_filters
  input: 
    - image
  output:
    - image.filter.gaussian: gaus
    - image.filter.laplace
  params: 
    - sigma: 4

- name: segment_nuc
  file: watershed_nuc.py
  package: segmentation
  input: 
    - image
  output:
    - image.segmentation.watershed

- name: rgb_overlay
  file: special_viewer.py
  package: builtin
  inputs: 
    - image
    - image.segmentation.watershed # feature 1 (two inputs)



actions:

  - topic: special_viewer_trigger # feature 2 (advanced select)
    select:
    - row: '1:10:100'
      column: first
      field: last
      animal name: ['squirl', 'mouse']
      experiment: one_each
      quality: '>90'

    - id: im0

