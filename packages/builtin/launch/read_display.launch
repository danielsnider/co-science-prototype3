nodes:

- name: image loader
  file: reader.py
  package: builtin
  outputs: 
    - to: image
      fields:
        - image
        - filename
        - row
        - column
        - field
        - plate
  params: 
    - input files: '/home/dan/imglib2-tutorials/images/*.tiff'

- name: segment_nuc
  file: watershed_nuc.py
  package: segmentation
  input: 
    - image
  output:
    - image.segmentation.watershed

- name: viewer
  file: viewer.py
  package: builtin
  inputs: 
    - image.image
    - image.filename
  params:

actions:
  - topic: viewer_trigger
    select: 
      - id: im0
